    <h3>合計: <span id="total-price">0</span> 円</h3>
    <h3>税込 (1.35%): <span id="total-tax">0</span> 円</h3>

    <script>
        function calculateTotal() {
            let total = 0;
            document.querySelectorAll('#menu-body tr').forEach(row => {
                const price = parseInt(row.querySelector('.price').textContent);
                const quantity = parseInt(row.querySelector('.quantity').value);
                const subtotal = price * quantity;
                row.querySelector('.subtotal').textContent = subtotal;
                total += subtotal;
            });
            document.getElementById('total-price').textContent = total;
            document.getElementById('total-tax').textContent = Math.round(total * 1.35);
        }
    </script>
